<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bitdevices.Resume" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Marcus Meneses</name>
    <description>
        My resum√© in application format.
    </description>
    <author email="marcusmeneses.email@gmail.com" href="http://8bitdevices.com.br">
        Marcus Meneses
    </author>

     <icon src="res/icon.png" />


    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />


 

    <!-- you can use any density that exists in the Android project -->
    <splash src="res/logo.png" density="land-hdpi"/>
    <splash src="res/logo.png" density="land-ldpi"/>
    <splash src="res/logo.png" density="land-mdpi"/>
    <splash src="res/logo.png" density="land-xhdpi"/>
    <splash src="res/logo.png" density="land-xxhdpi"/>

    <splash src="res/logo.png" density="port-hdpi"/>
    <splash src="res/logo.png" density="port-ldpi"/>
    <splash src="res/logo.png" density="port-mdpi"/>
    <splash src="res/logo.png" density="port-xhdpi"/>
    <splash src="res/logo.png" density="port-xxhdpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
<preference name="ShowSplashScreenSpinner" value="false" />
<preference name="loadUrlTimeoutValue" value="700000" />
<preference name="DisallowOverscroll" value="true" />
<preference name="Fullscreen" value="true" />
<preference name="SplashShowOnlyFirstTime" value="true" />
<preference name="SplashScreenDelay" value="100" />
<preference name="AutoHideSplashScreen" 	   value="false" />

</widget>
